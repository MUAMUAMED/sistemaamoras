# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/amoras_capital"

# JWT
JWT_SECRET="sua_chave_secreta_jwt_super_segura"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
