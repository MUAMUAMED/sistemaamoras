# üêò PostgreSQL Local Development Configuration
# Copie este arquivo para .env para usar em desenvolvimento

DATABASE_URL="postgresql://amoras:123456@localhost:5432/amoras_capital"

# JWT
JWT_SECRET="desenvolvimento_jwt_secret_min_32_chars_aqui"
JWT_EXPIRES_IN="7d"

# Server
NODE_ENV="development"
PORT=3001

# CORS (permite acesso do frontend local)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Rate Limiting (mais permissivo em dev)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=2000

# Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Logs (mais verbose em desenvolvimento)
LOG_LEVEL="debug"

# Chatwoot (deixe vazio em desenvolvimento)
CHATWOOT_URL=""
CHATWOOT_TOKEN=""

# N8N (deixe vazio em desenvolvimento)
N8N_WEBHOOK_URL=""

# Mercado Pago (use sandbox em desenvolvimento)
MP_ACCESS_TOKEN=""
MP_PUBLIC_KEY=""

# Company
COMPANY_NAME="Amoras Capital - DEV"
SALE_NUMBER_PREFIX="DEV"

# Development Settings (opcional)
# PRISMA_DEBUG=true
# PRISMA_LOG_LEVEL="query,info,warn,error" 